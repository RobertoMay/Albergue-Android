<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado normal -->
    <item android:state_pressed="false" android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="#cf285a"/> <!-- Color de fondo -->
            <corners android:radius="50dp"/> <!-- Bordes redondeados -->
            <padding android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="12dp"/> <!-- Padding -->
        </shape>
    </item>

    <!-- Estado presionado o enfocado -->
    <item android:state_pressed="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#802943"/> <!-- Color de fondo al presionar -->
            <corners android:radius="50dp"/> <!-- Bordes redondeados -->
            <padding android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="12dp"/> <!-- Padding -->
        </shape>
    </item>
</selector>