<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#f4f2f2" /> <!-- Color al presionar -->
            <corners android:radius="4dp" /> <!-- Bordes redondeados -->
            <stroke android:width="1dp" android:color="#cccccc" /> <!-- Borde -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" /> <!-- Color normal -->
            <corners android:radius="4dp" /> <!-- Bordes redondeados -->
            <stroke android:width="1dp" android:color="#cccccc" /> <!-- Borde -->
        </shape>
    </item>
</selector>