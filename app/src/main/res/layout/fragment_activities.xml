<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/fragment_activities.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Banner -->
        <LinearLayout
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/banner_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/bannerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actividades que se realizan en nuestra casa comunitaria"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"/>
    </LinearLayout>

    <!-- Card 1: Clases de Maya -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        android:backgroundTint="@android:color/white"
        android:layout_margin="10dp"> <!-- Fondo de la tarjeta eliminado -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageClases"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/clases"/>

            <TextView
                android:id="@+id/titleClases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clases de Maya"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/descriptionClases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sumérgete en el conocimiento ancestral con nuestras clases de lengua maya, donde aprenderás a comunicarte en este idioma milenario y descubrirás su importancia cultural. Las clases están diseñadas para todos los niveles, desde principiantes hasta aquellos que desean perfeccionar sus habilidades."
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card 2: Conferencias -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        android:backgroundTint="@android:color/white"
        android:layout_margin="10dp"> <!-- Fondo de la tarjeta eliminado -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageConferencias"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/conferencias"/>

            <TextView
                android:id="@+id/titleConferencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conferencias"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/descriptionConferencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Participa en nuestras conferencias con expertos en diversas áreas que comparten su conocimiento sobre temas actuales y relevantes. Desde tecnología hasta desarrollo personal, nuestras conferencias ofrecen un espacio de aprendizaje e inspiración para todos los asistentes."
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card 3: Actividades al aire Libre -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        android:backgroundTint="@android:color/white"
        android:layout_margin="10dp"> <!-- Fondo de la tarjeta eliminado -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageLimpieza"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/limpieza"/>

            <TextView
                android:id="@+id/titleLimpieza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actividades al aire Libre"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/descriptionLimpieza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disfruta de la naturaleza con nuestras actividades al aire libre. Ofrecemos desde caminatas guiadas hasta actividades recreativas que te permitirán conectarte con el entorno, mejorar tu bienestar y disfrutar de momentos de relajación en compañía de otros."
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
    </ScrollView>