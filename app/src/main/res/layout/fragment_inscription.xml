<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ScrollView para el contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"> <!-- fillViewport asegura que el ScrollView ocupe toda la pantalla -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:padding="16dp">

            <!-- Barra de progreso -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar_background" />

            <LinearLayout
                android:id="@+id/progressSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Paso 1 -->
                <LinearLayout
                    android:id="@+id/step1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/stepNumber1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/step_circle"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/stepText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paso 1"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Paso 2 -->
                <LinearLayout
                    android:id="@+id/step2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/stepNumber2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/step_circle"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/stepText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paso 2"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Paso 3 -->
                <LinearLayout
                    android:id="@+id/step3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/stepNumber3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/step_circle"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/stepText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paso 3"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tvAcceptedMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Felicidades, usted ha sido aceptado"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone"
                android:layout_marginTop="16dp" />

            <!-- Contenedor para los fragments de los pasos -->
            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />


        </LinearLayout>
    </ScrollView>

    <!-- AnimaciÃ³n de carga (Lottie) -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieLoading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:lottie_rawRes="@raw/loading"
        app:lottie_autoPlay="false"
        app:lottie_loop="true" />
</RelativeLayout>